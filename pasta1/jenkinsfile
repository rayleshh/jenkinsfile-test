pipeline {
    agent {
        kubernetes {
            label "worker-${UUID.randomUUID().toString()}"
            defaultContainer 'jnlp'
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: node
    image: node:14.16.1-alpine3.13
    command:
    - cat
    tty: true
"""
        }
    }

    stages {

        stage('Execute build 1') {
            steps {
                container('node') {
                    echo "make build 1 teste 2"
                }               
            }
        }

         stage('Execute tests 1') {
            steps {
                container('node') {
                    echo "make tests 1"
                }               
            }
        }

         stage('Execute deploy 1') {
            steps {
                container('node') {
                    echo "make deploy 1"
                }               
            }
        }
    }
}

